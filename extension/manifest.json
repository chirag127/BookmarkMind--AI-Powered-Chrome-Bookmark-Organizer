{
    "manifest_version": 3,
    "name": "BookmarkMind - AI Bookmark Organizer",
    "version": "1.0.0",
    "description": "AI-powered bookmark organizer using Google Gemini API. Automatically categorizes and sorts your bookmarks into intelligent folders.",
    "permissions": [
        "bookmarks",
        "storage",
        "activeTab",
        "tabs",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*",
        "https://api.cerebras.ai/*",
        "https://api.groq.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "features/core/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "features/dashboard/dashboard.html",
        "default_title": "BookmarkMind - Organize Bookmarks",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "features/settings/settings.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "author": "BookmarkMind Team",
    "homepage_url": "https://github.com/bookmarkmind/bookmarkmind"
}