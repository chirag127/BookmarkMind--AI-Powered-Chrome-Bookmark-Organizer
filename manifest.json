{
    "manifest_version": 3,
    "name": "BookmarkMind - AI Bookmark Organizer",
    "version": "1.0.0",
    "description": "AI-powered bookmark organizer using Google Gemini API. Automatically categorizes and sorts your bookmarks into intelligent folders.",
    "permissions": [
        "bookmarks",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/*"
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "BookmarkMind - Organize Bookmarks",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options/options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "author": "BookmarkMind Team",
    "homepage_url": "https://github.com/bookmarkmind/bookmarkmind"
}