{
    "name": "bookmarkmind",
    "version": "1.0.0",
    "type": "module",
    "description": "AI-powered Chrome bookmark organizer using Google Gemini API",
    "main": "manifest.json",
    "scripts": {
        "build": "echo 'No build process needed - pure vanilla JS extension'",
        "test": "jest",
        "test:unit": "jest tests/*.test.js --testPathIgnorePatterns=e2e",
        "test:integration": "jest tests/bookmarkService.test.js tests/folderManager.test.js",
        "test:e2e": "jest tests/categorizer.e2e.test.js",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "biome lint ./extension",
        "lint:fix": "biome lint --write ./extension",
        "format": "biome format --write ./extension",
        "format:check": "biome format ./extension",
        "check": "biome check --write ./extension",
        "package": "zip -r bookmarkmind-v1.0.0.zip . -x '*.git*' 'node_modules/*' '*.zip' '*.md' 'package*.json' 'create_simple_icons.html' 'icons/create_icons.py'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bookmarkmind/bookmarkmind.git"
    },
    "keywords": [
        "chrome-extension",
        "bookmarks",
        "ai",
        "organization",
        "gemini",
        "productivity",
        "browser",
        "automation"
    ],
    "author": "BookmarkMind Team",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/bookmarkmind/bookmarkmind/issues"
    },
    "homepage": "https://github.com/bookmarkmind/bookmarkmind#readme",
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@testing-library/jest-dom": "^6.9.1",
        "chrome-types": "^0.1.384",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "sinon-chrome": "^3.0.1"
    },
    "extensionInfo": {
        "manifestVersion": 3,
        "targetBrowsers": [
            "Chrome 88+",
            "Edge 88+",
            "Brave",
            "Opera"
        ],
        "permissions": [
            "bookmarks",
            "storage"
        ],
        "apiIntegrations": [
            "Google Gemini API"
        ]
    },
    "directories": {
        "example": "examples"
    }
}